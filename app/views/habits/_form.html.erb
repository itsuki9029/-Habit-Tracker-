<% if @habit.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@habit.errors.count, "error") %> が発生しました:</h2>
    <ul>
      <% @habit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
