<h2>コメントを編集</h2>
<%= form_with model: [@habit, @comment], local: true do |form| %>
  <div class="form-group">
    <%= form.text_area :content, class: 'form-control', placeholder: 'コメントを編集してください' %>
  </div>
  <div class="form-group mt-2">
    <%= form.submit '更新', class: 'btn btn-success' %>
    <%= link_to 'キャンセル', habit_path(@habit), class: 'btn btn-secondary' %>
  </div>
<% end %>
