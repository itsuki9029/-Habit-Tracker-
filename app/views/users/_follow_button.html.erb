<li class="list-group-item d-flex justify-content-between align-items-center">
  <div class="d-flex align-items-center">
    <%= image_tag(user.profile_image.present? ? user.profile_image.url : "default_avatar.png", 
                  alt: user.username, class: "rounded-circle", size: "50x50") %>
    <%= link_to user.username, user_path(user), class: "text-decoration-none ms-3" %>
  </div>
  <% if user != current_user %>
    <%= button_to(current_user.following?(user) ? 'フォロー解除' : 'フォロー', 
                  current_user.following?(user) ? unfollow_user_path(user) : follow_user_path(user), 
                  method: current_user.following?(user) ? :delete : :post, 
                  class: current_user.following?(user) ? 'btn btn-outline-danger btn-sm' : 'btn btn-primary btn-sm') %>
  <% end %>
</li>
